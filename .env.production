NODE_ENV=production
PORT=3000

# In production, keep admin / edit functionality off by default.
EDIT_MODE=false

# === Payload core secrets (production) ===
PAYLOAD_SECRET=prod-super-long-random-string-change-me
PAYLOAD_PUBLIC_URL=https://portfolio.your-domain.tld

# === SQLite database path inside the Docker app container ===
PAYLOAD_DB_SQLITE_PATH=/data/payload.db

# === Uploads directory inside the Docker app container ===
PAYLOAD_UPLOADS_DIR=/uploads

# === Admin bootstrap user (for first-time setup; rotate after use) ===
ADMIN_DEFAULT_EMAIL=you@your-domain.tld
ADMIN_DEFAULT_PASSWORD=change-me-strong-password

# === Draft Mode / Preview ===
PREVIEW_SECRET=prod-preview-secret-change-me

# === CORS / security (optional) ===
ALLOWED_ORIGINS=https://portfolio.your-domain.tld

# === Caddy / reverse proxy hints (used in docker-compose / Caddyfile templates) ===
APP_DOMAIN=portfolio.your-domain.tld
EMAIL_FOR_ACME=you@your-domain.tld

