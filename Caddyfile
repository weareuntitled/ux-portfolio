{$APP_DOMAIN} {
  @static path /_next/static
  handle @static {
    header Cache-Control "public, max-age=31536000, immutable"
    reverse_proxy app:3000
  }
  @uploads path /uploads
  handle @uploads {
    header Cache-Control "public, max-age=86400"
    reverse_proxy app:3000
  }
  handle {
    reverse_proxy app:3000
  }
}

